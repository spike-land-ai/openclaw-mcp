    "@spike-land-ai/eslint-config": "workspace:*",
    "@spike-land-ai/tsconfig": "workspace:*",
    "@types/node": "25.3.2",
    "eslint": "9.27.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.32.1",
    "vitest": "4.0.18"
